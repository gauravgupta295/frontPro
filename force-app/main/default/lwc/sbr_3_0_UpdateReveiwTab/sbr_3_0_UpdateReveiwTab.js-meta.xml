<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<description>To call Update Totals Api when user opens quote or order review tab</description>
	<targets>
		<target>lightning__RecordPage</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property
                name="recordId"
                type="String"
                label="Record Id"                
                default="{!recordId}" />
            <property
                name="objectApiName"
                type="String"
                label="Object Name"                
                default="{!objectApiName}" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>