<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig
            targets="lightning__FlowScreen">
            <property name="source" label="Source" type="String" default="Flow" role="inputOnly" />
            <property name="accountId" label="Account Id" type="String" role="inputOnly" />
            <property name="vendorId" label="Vendor Id" type="String" role="outputOnly" />
            <property name="poRecTypeVal" label="PO Record Type Id" type="String" role="outputOnly" />
            <property name="poRecTypeName" label="PO Record Type Name" type="String" role="outputOnly" />
            <property name="currentUserId" label="Ordered By Id" type="String" role="outputOnly" />
        </targetConfig>
        <targetConfig targets="lightning__AppPage">
			<supportedFormFactors>
				<supportedFormFactor type="Small" />
				<supportedFormFactor type="Large" />
			</supportedFormFactors>
		</targetConfig>
    </targetConfigs>
</LightningComponentBundle>