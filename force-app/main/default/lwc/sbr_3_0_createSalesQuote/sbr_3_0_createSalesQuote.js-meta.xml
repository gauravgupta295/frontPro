<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>SBR 3.0 - Create Sales Quote</masterLabel>
    <description>Component to gather fields to create a quote</description>
    <targets>
      <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
      <targetConfig targets="lightning__FlowScreen">
          <property name="accountId" label="Account Id" type="String" default="a" />
          <property name="recordId" label="Record Id" type="String"/>
          <property name="officeAccountId" label="Office Account Id" type="String" />
          <property name="officeId" label="Office Id" type="String" role = "outputOnly" />
          <property name="contactId" label="Contact Id" type="String" role = "outputOnly" />
          <property name="quoteName" label="Quote Name" type="String" />
          <property name="orderedBy" label="Ordered By (Contact)" type="String" />
          <property name="useJobSite" label="Use Job Site" type="Boolean" />
          <property name="externalQuote" label="External Quote Used" type="Boolean" />
          <property name="accountWhere" label="Where clause for account look up" type="String" />
          <property name="quoteRecordType" label="Record Type for Quote" type="String" />
          <property name="accountRequired" label="Account Required" type="Boolean" />
          <property name="userCountryCodes" label="User Country Code" type="String" />
          <property name="userCountryCode" label="User Country Code" type="Boolean" />
          
      </targetConfig>
  </targetConfigs>
</LightningComponentBundle>